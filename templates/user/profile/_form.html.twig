{{ form_start(form, {'attr': {'class': 'app-form'}}) }}
<fieldset class="form-fieldset">
    <legend class="form-legend">Vos Informations</legend>

    <div class="form-group">
        <div class="group-widget">
            {{ form_label(form.pseudo) }}
            {{ form_widget(form.pseudo) }}
        </div>
        <div class="group-info">
            {{ form_help(form.pseudo) }}
            {{ form_errors(form.pseudo) }}
        </div>
    </div>

    <div class="form-group">
        <div class="group-widget">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div class="group-info">
            {{ form_help(form.email) }}
            {{ form_errors(form.email) }}
        </div>
    </div>

    <div class="form-group">
        <div class="group-widget">
            {{ form_label(form.password) }}
            {{ form_widget(form.password) }}
        </div>
        <div class="group-info">
            {{ form_help(form.password) }}
            {{ form_errors(form.password) }}
        </div>
    </div>
</fieldset>

<fieldset class="form-fieldset controls">
    <button type="submit" class="form-submit">Inscription</button>
</fieldset>
{{ form_end(form) }}
